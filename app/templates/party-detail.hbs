<h2>{{model.party.name}}</h2>
<div class='row'>
  <div class='col-xs-12 omnibar'>
    <input type='text' class="form-control" placeholder="Enter name or group."/>
    <br>
    <input type="checkbox" aria-label="Checkbox for following text input">
    Check if a Male
    <br>
    <button type="button" class="btn btn-primary">Add to List</button>
  </div>
</div>
<div class='row'>
  <div class='col-xs-12 col-md-6' id='male-guests'>
    <h3>Male Guests</h3>
    <ul>
    {{#each model.males as |guest|}}
      <li class='guests' id='male-guests'><strong>{{guest.name}}</strong> - <small>{{guest.added_by}}</small></li>
    {{else}}
      There are no males on the party list.
    {{/each}}
    </ul>
  </div>
  <div class='col-xs-12 col-md-6' id='female-guests'>
    <h3>Female Guests</h3>
    <ul>
    {{#each model.females as |guest|}}
      <li class='guests' id='female-guests'><strong>{{guest.name}}</strong> - <small>{{guest.added_by}}</small></li>
    {{else}}
      There are no females on the party list.
    {{/each}}
    </ul>
  </div>
</div>
{{outlet}}
